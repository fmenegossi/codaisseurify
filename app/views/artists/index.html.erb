<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<div class="row">
			<div class="col-md-5 artist-header">
				<%= link_to("Artist Name", {sort: "name", direction: invert_order_by}) %>
			</div>
			<div class="col-md-5 artist-header">
				<%= link_to("Creation Date", {sort: "created_at", direction: invert_order_by}) %>
			</div>
			<div class="col-md-2 artist-header">
				Actions
			</div>
		</div>

		<% @artists.each do |artist| %>
			<div class="row artist-item">
				<div class="col-md-5">
					<%= link_to(artist.name, artist_path(artist.id)) %>
				</div>
				<div class="col-md-5">
					<%= artist.created_at.to_date %>
				</div>
				<div class="col-md-1">
					<%= link_to('<i class="fa fa-trash-o action-icon" alt="Delete"></i>'.html_safe, artist_path(artist.id), method: :delete, data: {confirm: "Delete #{artist.name}?"}) %>
				</div>
				<div class="col-md-1">
					<%= link_to('<i class="fa fa-pencil action-icon" alt="Edit"></i>'.html_safe, edit_artist_path(artist.id)) %>
				</div>
			</div>
		<% end %>
	</div>

</div>
<div class="row spacer">
	<div class="col-md-12 text-center">
		<%= link_to("New Artist", new_artist_path, class:"btn btn-success") %>
	</div>
</div>
