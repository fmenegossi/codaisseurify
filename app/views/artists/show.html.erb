<%= image_tag(@artist.image.thumbnail) %>
<br>
Name: <%= @artist.name %>
<br>
Style: <%= @artist.style %>

<br>
<br>

<h1>Songs</h1>

<ul>
<% @artist.songs.each do |song| %>
	<li><%= song.title %> &nbsp; <%= link_to("Delete", artist_song_path(@artist.id, song.id), method: :delete, data: {confirm: "Delete song #{song.title}?"}) %> </li>
<% end %>
</ul>


<br>
<h2>Add a Song</h2>

<% if @artist.errors.present? %>
	<ul>
		<% @artist.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for [@artist, @artist.songs.new], html: { multipart: true } do |f| %>

	<div class="form-group">
		<label>Song title</label>
		<%= f.text_field :title, placeholder: "Song title", class: "form-control" %>
	</div>

	<div class="actions">
		<%= f.submit "Save", class: "btn btn-primary" %>
	</div>

<% end %>
