<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="row">
			<%= image_tag(@artist.image.thumbnail, class: "img-responsive img-artist") %>
		</div>
		<div class="row">
			Name: <%= @artist.name %>
		</div>
		<div class="row">
			Style: <%= @artist.style %>
		</div>

		<h1>Songs</h1>

		<% @artist.songs.each do |song| %>
			<div class="row artist-item">
				<div class="col-md-8">
					<%= song.title %>
				</div>
				<div class="col-md-4 text-right">
					<%= link_to('<i class="fa fa-trash-o action-icon" alt="Delete"></i>'.html_safe, artist_song_path(@artist.id, song.id), method: :delete, data: {confirm: "Delete song #{song.title}?"}) %>
				</div>
			</div>
		<% end %>

		<div class="row spacer">

			<div class="col-md-8 col-md-offset-2">
				<h2>Add a Song</h2>

				<% if @artist.errors.present? %>
				<ul>
					<% @artist.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
					<% end %>
				</ul>
				<% end %>

				<%= form_for [@artist, @artist.songs.new], html: { multipart: true } do |f| %>

				<div class="form-group">
					<label>Song title</label>
					<%= f.text_field :title, placeholder: "Song title", class: "form-control" %>
				</div>

				<div class="actions">
					<%= f.submit "Save", class: "btn btn-primary" %>
				</div>

				<% end %>
			</div>
		</div>

	</div>
</div>
